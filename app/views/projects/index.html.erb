<h1>Listing projects</h1>

<table class="table content-table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Requirements</th>
      <th>Course</th>
      <th>Day</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= project.requirements %></td>
        <td><%= project.course.name %></td>
        <td><%= project.day.day %></td>
        <td><%= link_to 'Show', project, :class => 'btn btn-default btn-small' %></td>
        <td><%= link_to 'Edit', edit_project_path(project), :class => 'btn btn-warning btn-small' %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger btn-small' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Project', new_project_path, :class => 'btn btn-primary btn-large' %>
