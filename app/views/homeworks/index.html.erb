<h1>listing homeworks</h1>

<table class="table content-table">
  <thead>
    <tr>
      <th>Assignment</th>
      <th>Days</th>
      <th>Course</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @homeworks.each do |homework| %>
      <tr>
        <td><%= homework.assignment %></td>
        <td><%= homework.day.day %></td>
        <td><%= homework.course.name %></td>
        <td><%= link_to 'Show', homework, :class => 'btn btn-default btn-small' %></td>
        <td><%= link_to 'Edit', edit_homework_path(homework), :class => 'btn btn-warning btn-small' %></td>
        <td><%= link_to 'Destroy', homework, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger btn-small' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Homework', new_homework_path, :class => 'btn btn-primary btn-large' %>
