<p id="notice"><%= notice %></p>


<div class="page-header">
  <h1><%= @day.day %> <small>date</small></h1>
</div>

<p class="lead">Tests:</p>
<% @day.tests.each do |test| %>
	<div class="list-group">
	  <div class="list-group-item">
	    <h4 class="list-group-item-heading"><%= test.subject %></h4>
	    <p class="list-group-item-text"><%= test.course.name %></p>
	  </div>
	</div>
<% end %>
<p><%= link_to 'add test', new_test_path(@day.tests) %></p>

<p class="lead">Homework:</p>
<% @day.homeworks.each do |homework| %>
	<div class="list-group">
	  <div class="list-group-item">
	    <h4 class="list-group-item-heading"><%= homework.assignment %></h4>
	    <p class="list-group-item-text"><%= homework.course.name %></p>
	  </div>
	</div>
<% end %>
<p><%= link_to 'add homework', new_homework_path(@day.homeworks) %></p>

<p class="lead">Projects:</p>
<% @day.projects.each do |project| %>
	<div class="list-group">
	  <div class="list-group-item">
	    <h4 class="list-group-item-heading"><%= project.name %></h4>
	    <p class="list-group-item-text"><%= project.requirements %></p>
	    <p class="list-group-item-text"><%= project.course.name %></p>
	  </div>
	</div>
<% end %>
<p><%= link_to 'add project', new_project_path(@day.projects) %></p>

<p class="lead">Practices:</p>
<% @day.practices.each do |practice| %>
	<div class="list-group">
	  <div class="list-group-item">
	    <h4 class="list-group-item-heading"><%= practice.group.name %></h4>
	  </div>
	</div>
<% end %>
<p><%= link_to 'add practice', new_practice_path(@day.practices) %></p>

<hr></hr>

<%= link_to 'edit', edit_day_path(@day) %> |
<%= link_to 'back', days_path %>
