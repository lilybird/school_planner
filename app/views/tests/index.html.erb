<h1>listing tests</h1>

<table class="table content-table">
  <thead>
    <tr>
      <th>Subject</th>
      <th>Course</th>
      <th>Day</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @tests.each do |test| %>
      <tr>
        <td><%= test.subject %></td>
        <td><%= test.course.name %></td>
        <td><%= test.day.day %></td>
        <td><%= link_to 'Show', test, :class => 'btn btn-default btn-small' %></td>
        <td><%= link_to 'Edit', edit_test_path(test), :class => 'btn btn-warning btn-small' %></td>
        <td><%= link_to 'Destroy', test, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger btn-small' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Test', new_test_path, :class => 'btn btn-primary btn-large' %>
