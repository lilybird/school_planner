<h1>Listing days</h1>

<table class="table content-table">
  <thead>
    <tr>
      <th>Day</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @days.each do |day| %>
      <tr>
        <td><%= day.day %></td>
        <td><%= link_to 'Show', day, :class => 'btn btn-default btn-small' %></td>
        <td><%= link_to 'Edit', edit_day_path(day), :class => 'btn btn-warning btn-small' %></td>
        <td><%= link_to 'Destroy', day, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger btn-small' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Day', new_day_path, :class => 'btn btn-primary btn-large' %>
