<h1>Listing groups</h1>

<table class="table content-table">
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.name %></td>
        <td><%= link_to 'Show', group,:class => 'btn btn-default btn-small' %></td>
        <td><%= link_to 'Edit', edit_group_path(group), :class => 'btn btn-warning btn-small' %></td>
        <td><%= link_to 'Destroy', group, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger btn-small' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Group', new_group_path, :class => 'btn btn-primary btn-large' %>
